<Window x:Class="WPF.Views.UpdatePersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Person" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="Name" Text="{Binding SelectedPerson.Name}" />
            <TextBox x:Name="Position" Text="{Binding SelectedPerson.PositionName}" />
            <TextBox x:Name="Department" Text="{Binding SelectedPerson.DepartmentName}" />
            <TextBox x:Name="Salary" Text="{Binding SelectedPerson.Salary}" />
            <TextBox x:Name="City" Text="{Binding SelectedPerson.PersonCity}" />
            <Button Content="Save" Command="{Binding UpdatePersonCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
