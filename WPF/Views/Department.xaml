<Window x:Class="WPF.Views.Department"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Departments" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Content="List Departments" Command="{Binding LoadDepartmentsCommand}" />
            <ListView ItemsSource="{Binding Departments}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding DepartmentId}" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding DepartmentName}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <!-- Add other CRUD buttons here -->
        </StackPanel>
    </Grid>
</Window>
